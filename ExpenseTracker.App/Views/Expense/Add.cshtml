@model ExpenseFormModel

@{
    ViewData["Title"] = "Add new expense";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Add Expense</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AddExpense" method="post">
                        @* Hidden fields *@
                        <input type="hidden" asp-for="FamilyId" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CategoryId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Expense Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter expense name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Add Expense</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}