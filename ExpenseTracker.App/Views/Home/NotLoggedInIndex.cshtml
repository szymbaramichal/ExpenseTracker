@{
    ViewData["Title"] = "Welcome to ExpenseTracker";
}

<div class="container-fluid" style="padding: 0;">
    <!-- Hero section -->
    <div class="hero text-center text-white" style="background-color: #007bff; padding: 100px 0;">
        <h1 class="display-3">ExpenseTracker</h1>
        <p class="lead">Manage your expenses with ease and clarity.</p>
        <a href="@Url.Action("Login", "Account")" class="btn btn-lg btn-light" style="border-radius: 30px; padding: 15px 40px;">Log In</a>
    </div>

    <!-- Features section -->
    <div class="features container py-5">
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-piggy-bank" style="font-size: 3rem; color: #007bff;"></i>
                </div>
                <h3>Track Your Expenses</h3>
                <p>Easily categorize and track all your expenses in one place.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-graph-up-arrow" style="font-size: 3rem; color: #007bff;"></i>
                </div>
                <h3>Visualize Your Budget</h3>
                <p>Gain insights with easy-to-understand charts and reports.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-lock-fill" style="font-size: 3rem; color: #007bff;"></i>
                </div>
                <h3>Secure and Private</h3>
                <p>Your data is encrypted and secured with industry-leading practices.</p>
            </div>
        </div>
    </div>

    <!-- Benefits section -->
    <div class="benefits bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose ExpenseTracker?</h2>
            <div class="row">
                <div class="col-md-6">
                    <h4>1. Simplify Your Financial Life</h4>
                    <p>Organize and manage all your financial data in one simple app.</p>
                </div>
                <div class="col-md-6">
                    <h4>2. Stay on Top of Your Budget</h4>
                    <p>Know exactly where your money goes with detailed tracking and reporting.</p>
                </div>
                <div class="col-md-6">
                    <h4>3. Save Time and Money</h4>
                    <p>Automate your finances and stay on top of your expenses with minimal effort.</p>
                </div>
                <div class="col-md-6">
                    <h4>4. Accessible Anytime, Anywhere</h4>
                    <p>Access your data from any device, anywhere in the world.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"/>
