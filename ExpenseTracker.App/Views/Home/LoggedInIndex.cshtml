@using ExpenseTracker.Core.Constants;

@{
    ViewData["Title"] = "Main page";
}

<div class="container-fluid" style="padding: 0;">
    <div class="hero text-center text-white" style="background-color: #007bff; padding: 60px 0;">
        <h2 class="display-4">Welcome, @Context.Session.GetString(SessionFields.USERNAME) üëã</h2>
        <p class="lead">Start tracking your expenses and manage your 'expense families'.</p>
        <a href="@Url.Action("Logout", "User")" class="btn btn-lg btn-light" style="border-radius: 30px; padding: 10px 30px;">
            ‚û°Ô∏è Let's check your profile! (currently logout) ‚¨ÖÔ∏è
        </a>

        <div class="d-flex justify-content-center align-items-center mt-4">
            <div class="dropdown me-3">
                <button class="btn btn-light dropdown-toggle" type="button" id="familiesDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border-radius: 30px; padding: 10px 30px;">
                    Select a Family
                </button>
                <ul class="dropdown-menu" aria-labelledby="familiesDropdown">
                    @foreach (var family in ViewBag.FamiliesInfo)
                    {
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Family" asp-action="FamilyPage" asp-route-id="@family.Id">
                                @family.Name
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <a href="@Url.Action("Index", "Family")" class="btn btn-light" style="border-radius: 30px; padding: 10px 30px;">
                Create/Join Family
            </a>
        </div>
    </div>

    <div class="features container py-5">
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-piggy-bank" style="font-size: 3rem; color: #007bff;"></i>
                </div>
                <h3>Track Your Expenses</h3>
                <p>Easily categorize and track all your expenses in one place.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-graph-up-arrow" style="font-size: 3rem; color: #007bff;"></i>
                </div>
                <h3>Visualize Your Budget</h3>
                <p>Gain insights with easy-to-understand charts and reports.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-lock-fill" style="font-size: 3rem; color: #007bff;"></i>
                </div>
                <h3>Secure and Private</h3>
                <p>Your data is encrypted and secured with industry-leading practices.</p>
            </div>
        </div>
    </div>
</div>
